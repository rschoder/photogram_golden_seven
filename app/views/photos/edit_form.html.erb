<h1> Edit A Photo </h1>

<form action="http://localhost:3000/update_photo/<%= @edit.id%> ">

  <label> Caption</label>
  <input type="text" name="the_caption" value="<%= @edit.caption %>">

  <label> Source</label>
  <input type="text" name="the_source" value="<%= @edit.source %>">

  <button> Edit Photo </button>
</form>

<a href=" /photos"> Go Back</a>
